{
  "name": "root",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.2.0",
  "engines": {
    "pnpm": ">=8"
  },
  "scripts": {
    "build": "pnpm run -r tsc",
    "check:all": "pnpm run '/^check:(?!all)/'",
    "check:tsc": "pnpm run build --noEmit",
    "format": "prettier --write packages/**/*.ts",
    "check:format": "prettier --check packages/**/*.ts",
    "check:lint": "eslint packages/**/*.ts",
    "lint-fix": "eslint packages/**/*.ts --fix",
    "check:test": "jest --testTimeout 10000"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^16.18.23",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
